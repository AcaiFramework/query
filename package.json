{
  "name": "@acai/query",
  "version": "0.1.0",
  "description": "A simple modular, scalable query builder that let you toggle strategies to easily, used and created by Açaí Framework",
  "main": "build/index.ts",
  "author": "Rafael Correa",
  "license": "BSD-3-Clause",
  "private": false,
  "scripts": {
    "watch": "ts-node-dev --transpile-only src/js/index.ts",
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/js/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@types/jest": "^26.0.10",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.61",
    "typescript": "^4.0.2"
  },
  "keywords": [
	  "açai", "query", "queryBuilder", "typescript", "javascript"
  ]
}
